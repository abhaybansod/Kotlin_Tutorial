<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.abhay.kotlintutorial.AnimationTweenSlideActivity">
    <ImageView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idbtnSlideLeft"
        android:onClick="SlideLeft"
        tools:ignore="OnClick"
        android:text="SlideLeft"
         />
    <Button
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idbtnSlideRight"
        android:onClick="SlideRight"
        tools:ignore="OnClick"
        android:text="SlideRight" />
    <Button
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idbtnSlideUp"
        android:onClick="SlideUp"
        tools:ignore="OnClick"
        android:text="SlideUp" />
    <Button
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idbtnSlideDown"
        android:onClick="SlideDown"
        android:text="SlideDown"
        tools:ignore="OnClick" />
</LinearLayout>
